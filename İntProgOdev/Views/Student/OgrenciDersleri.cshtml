@model Ogrenci
@{
    ViewData["Title"] = "OgrenciDersleri";
}

<div class="container my-5">
    <h1 class="mb-4">@Model.Ad @Model.Soyad - Aldığı Dersler</h1>

    @if (Model.OgrenciDersler != null && Model.OgrenciDersler.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="bg-primary text-white">
                    <tr>
                        <th scope="col">Ders Kodu</th>
                        <th scope="col">Ders Adı</th>
                        <th scope="col">Kredi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ogrDers in Model.OgrenciDersler)
                    {
                        <tr>
                            <td>@ogrDers.Ders?.DersKodu</td>
                            <td>@ogrDers.Ders?.DersAd</td>
                            <td>@ogrDers.Ders?.Kredi</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted">Bu öğrenci henüz herhangi bir ders almamış.</p>
    }
</div>
